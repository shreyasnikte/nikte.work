---
import "../styles/global.css";
import { getCollection } from 'astro:content';

const projects = [
  { title: "incometax.nl", desc: "privacy-first tax calculator for the netherlands", link: "https://incometax.nl" },
  { title: "Maintainer: sarawadekar foundation", desc: "website for education-focused ngo", link: "https://sarawadekarfoundation.org/" },
  { title: "Maintainer: Netherlands Marathi Mandal", desc: "community platform for marathi speakers", link: "https://netherlandsmarathimandal.org/" },
];

const posts = (await getCollection('blog'))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 5);

const formatDate = (date: Date) => date.toISOString().split('T')[0];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Shreyas Nikte - Software Developer" />
    <title>shreyas nikte</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body class="bg-neutral-950 text-neutral-300 font-sans antialiased selection:bg-emerald-500/30">
    <div class="min-h-screen flex flex-col">
      <main class="flex-1 max-w-2xl mx-auto px-6 py-12 w-full">
        
        <!-- Hero -->
        <header class="mb-6">
          <h1 class="text-neutral-100 text-xl mb-2">shreyas nikte</h1>
          <p class="text-neutral-400 mb-3">I write code and mess with hardware to fix the things that annoy me.</p>
          <blockquote class="text-neutral-400 text-sm mb-3 border-l-2 border-neutral-700 pl-3">...Sometimes my fixes annoy me more.</blockquote>
          <p class="text-neutral-500 text-sm">Deep diving Vibe-coding/engineering, "Ship beats perfect".</p>
        </header>
        <hr class="border-neutral-800 my-6" />

        <!-- Projects -->
        <section class="mb-6">
          <h2 class="text-neutral-500 text-sm uppercase tracking-wider mb-3">Projects</h2>
          <ul class="space-y-3">
            {projects.map((project) => (
              <li>
                <a 
                  href={project.link} 
                  target="_blank"
                  rel="noopener noreferrer"
                  class="group block"
                >
                  <span class="text-neutral-100 group-hover:text-emerald-400 transition-colors">{project.title}</span>
                  <span class="text-neutral-600 mx-2">—</span>
                  <span class="text-neutral-500">{project.desc}</span>
                </a>
              </li>
            ))}
          </ul>
        </section>
        <hr class="border-neutral-800 my-6" />

        <!-- Blog -->
        <section class="mb-6">
          <div class="flex items-center justify-between mb-3">
            <h2 class="text-neutral-500 text-sm uppercase tracking-wider">Writing</h2>
            <a href="/blog" class="text-neutral-500 text-sm hover:text-emerald-400 transition-colors">see all →</a>
          </div>
          {posts.length > 0 ? (
            <ul class="space-y-3">
              {posts.map((post) => (
                <li>
                  <a 
                    href={`/blog/${post.id}`}
                    class="group block"
                  >
                    <span class="text-neutral-600 text-sm mr-3">{formatDate(post.data.date)}</span>
                    <span class="text-neutral-100 group-hover:text-emerald-400 transition-colors">{post.data.title}</span>
                  </a>
                </li>
              ))}
            </ul>
          ) : (
            <p class="text-neutral-600">no posts yet.</p>
          )}
        </section>
        <hr class="border-neutral-800 my-6" />

        <!-- Contact -->
        <section class="mb-6">
          <h2 class="text-neutral-500 text-sm uppercase tracking-wider mb-3">Say hello</h2>
          <ul class="space-y-2">
            <li>
              <a href="mailto:shreyas.nikte@gmail.com" class="text-neutral-400 hover:text-emerald-400 transition-colors">
                shreyas.nikte@gmail.com
              </a>
            </li>
            <li>
              <a href="https://github.com/shreyasnikte" target="_blank" rel="noopener noreferrer" class="text-neutral-400 hover:text-emerald-400 transition-colors">
                github.com/shreyasnikte
              </a>
            </li>
            <li>
              <a href="https://linkedin.com/in/shreyasnikte" target="_blank" rel="noopener noreferrer" class="text-neutral-400 hover:text-emerald-400 transition-colors">
                linkedin.com/in/shreyasnikte
              </a>
            </li>
            <li>
              <a href="https://x.com/shrenikte" target="_blank" rel="noopener noreferrer" class="text-neutral-400 hover:text-emerald-400 transition-colors">
                x.com/shrenikte
              </a>
            </li>
          </ul>
        </section>

      </main>

      <!-- Footer -->
      <footer class="border-t border-neutral-800 py-6">
        <div class="max-w-2xl mx-auto px-6 text-center">
          <p class="text-neutral-600 text-sm">© 2026 shreyas nikte</p>
        </div>
      </footer>
    </div>
  </body>
</html>
